%html(xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en" data-ng-app="demoApp")
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    %meta(name="viewport" content="width=device-width,initial-scale=1")
    %link(rel="stylesheet" href="../lib/bootstrap/css/bootstrap.min.css" type="text/css")
    %link(rel="stylesheet" href="../src/grid.css" type="text/css")
    %link(rel="stylesheet" href="../src/views/grid/styles.css" type="text/css")
    %link(rel="stylesheet" href="../src/views/listing/styles.css" type="text/css")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    %link(rel="stylesheet" href="demo.less" type="text/less")
    - // %link(rel="stylesheet" href="demo.css" type="text/css")
    %link(rel="stylesheet" href="../lib/highlight/default.min.css" type="text/css")
    %title Angrid Demo
  %body(data-ng-controller="AngridCtrl")
    .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container-fluid
        .navbar-header
          %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-collapse")
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand(href="#") Angrid
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a(href="#") Documentation
            %li
              %a(href="download.html") Download
            %li
              %a(href="license.html") Download
    .container-fluid(data-ng-controller="DemoCtrl")
      .row
        .col-md-6.settingsArea
          %h1 Sample Grid
          %h3 The grid comes with various configurable settings. The sample grid below the settings updates in real time. 
          .form-horizontal(role="form")
            .form-group
              %h2.col-xs-12 General Settings
            .panel.panel-default.collapsed
              .panel-heading
                %a(href="#")
                  Configure general settings.
              .panel-body
                .form-group
                  %label.col-xs-3.control-label Pagination
                  .col-xs-9
                    %select.form-control(data-ng-model="settings.pagination")
                      %option(value="touch") Touch Friendly
                      %option(value="classic") Classic
                .form-group
                  %label.col-xs-3.control-label Initial Page
                  .col-xs-9
                    %input.form-control(type="text" data-ng-model="settings.initalQuery.currentPage")
                .form-group
                  %label.col-xs-3.control-label Page Sizes
                  .col-xs-9
                    %input.form-control(type="text" data-ng-trim="true" data-ng-list=", " data-ng-model="settings.pageSizes")
                .form-group
                  %label.col-xs-3.control-label Initial Page Size
                  .col-xs-9
                    %input.form-control(type="text" data-ng-model="settings.initalQuery.currentPageSize")
                .form-group
                  %label.col-xs-3.control-label(for="search-enabled") Enable Search
                  .col-xs-9
                    %input#search-enabled(type="checkbox" data-ng-model="settings.searchEnabled")
                .form-group
                  %label.col-xs-3.control-label(for="filters-enabled") Enable Filters
                  .col-xs-9
                    %input#filters-enabled(type="checkbox" data-ng-model="settings.filtersEnabled")
            .form-group
              %h2.col-xs-12 Fields
            .panel.panel-default.collapsed(data-ng-repeat="column in settings.columns")
              .panel-heading
                %a(href="#")
                  {{column.title}} ({{column.name}})
              .panel-body
                .form-group
                  %label.col-xs-3.control-label Title
                  .col-xs-9
                    %input.form-control(type="text" data-ng-model="column.title")
                .form-group
                  %label.col-xs-3.control-label Visible On
                  .col-xs-9
                    %label.checkbox-inline
                      %input(type="checkbox" data-ng-model="column.showOn.mobile")
                      Mobile
                    %label.checkbox-inline
                      %input(type="checkbox" data-ng-model="column.showOn.tablet")
                      Tablet
                    %label.checkbox-inline
                      %input(type="checkbox" data-ng-model="column.showOn.desktop")
                      Desktop
                    %label.checkbox-inline
                      %input(type="checkbox" data-ng-model="column.showOn.large")
                      Large Screens
                .form-group
                  %label.col-xs-3.control-label Capabilities
                  .col-xs-9
                    %label.checkbox-inline
                      %input(type="checkbox" data-ng-model="column.sortable")
                      Sortable
                    %label.checkbox-inline
                      %input(type="checkbox" data-ng-model="column.filterable")
                      Filterable
                    %label.checkbox-inline
                      %input(type="checkbox" data-ng-model="column.allowHtml")
                      Allow HTML
            .form-group
              %h2.col-xs-12 Template
            .panel.panel-default.collapsed
              .panel-heading
                %a(href="#")
                  Select layout mode and tweak display settings.
              .panel-body
                .form-group
                  %label.col-xs-3.control-label Template
                  .col-xs-9
                    %select.form-control(data-ng-change="changeTemplate()" data-ng-model="template")
                      %option(value="grid") Grid
                      %option(value="listing") Listing
                .listing-view-settings(data-ng-if="template=='listing'")
                  .form-group
                    %label.col-xs-3.control-label Columns (mobile)
                    .col-xs-9
                      %select.form-control(data-ng-model="settings.viewSettings.entriesPerRowMobile")
                        %option(value="1") 1
                        %option(value="2") 2
                        %option(value="3") 3
                        %option(value="4") 4
                        %option(value="6") 6
                        %option(value="12") 12
                  .form-group
                    %label.col-xs-3.control-label Columns (tablet)
                    .col-xs-9
                      %select.form-control(data-ng-model="settings.viewSettings.entriesPerRowTablet")
                        %option(value="1") 1
                        %option(value="2") 2
                        %option(value="3") 3
                        %option(value="4") 4
                        %option(value="6") 6
                        %option(value="12") 12
                  .form-group
                    %label.col-xs-3.control-label Columns (desktop)
                    .col-xs-9
                      %select.form-control(data-ng-model="settings.viewSettings.entriesPerRowDesktop")
                        %option(value="1") 1
                        %option(value="2") 2
                        %option(value="3") 3
                        %option(value="4") 4
                        %option(value="6") 6
                        %option(value="12") 12
                  .form-group
                    %label.col-xs-3.control-label Columns (large screens)
                    .col-xs-9
                      %select.form-control(data-ng-model="settings.viewSettings.entriesPerRowLarge")
                        %option(value="1") 1
                        %option(value="2") 2
                        %option(value="3") 3
                        %option(value="4") 4
                        %option(value="6") 6
                        %option(value="12") 12
            .form-group
              %h2.col-xs-12 Item Buttons
            .panel.panel-default.collapsed(data-ng-repeat="btn in settings.itemButtons")
              .panel-heading
                %a(href="#")
                  {{btn.title || 'Button'}}
                  %span(data-ng-if="btn.help")
                    ({{btn.help}})
              .panel-body
                .form-group
                  %label.col-xs-3.control-label Title
                  .col-xs-9
                    %input.form-control(type="text" data-ng-model="btn.title")
                .form-group
                  %label.col-xs-3.control-label Help
                  .col-xs-9
                    %input.form-control(type="text" data-ng-model="btn.help")
                .form-group
                  %label.col-xs-3.control-label Style
                  .col-xs-9
                    %select.form-control(data-ng-model="btn.cssClass")
                      %option(value="default") default
                      %option(value="primary") primary
                      %option(value="success") success
                      %option(value="info") info
                      %option(value="warning") warning
                      %option(value="danger") danger
                      %option(value="link") link
                .form-group
                  %label.col-xs-3.control-label Icon
                  .col-xs-9
                    %span.glyphicon(class="{{btn.iconClass}}" data-ng-if="btn.iconClass")
                    %span
                      %a(data-ng-click="toggleIcons()") Change
                    %span |
                    %span
                      %a(data-ng-click="clearIcon(btn)") Clear
                .form-group(data-ng-show="iconsVisible")
                  %ul.bs-glyphicons-list.col-xs-push-3.col-xs-9
                    %li(data-ng-repeat="glyphicon in glyphicons" data-ng-click="selectIcon(btn, glyphicon)")
                      %span.glyphicon(class="{{glyphicon}}")
                      %span.glyphicon-class glyphicon {{glyphicon}}
                .form-group
                  %label.col-xs-3.control-label(for="ask-for-confirmation-item{{$index}}") Ask For Confirmation
                  .col-xs-9
                    %input(id="ask-for-confirmation-item{{$index}}" type="checkbox" data-ng-model="btn.askForConfirmation")
                %div(data-ng-if="btn.askForConfirmation")
                  .form-group
                    %label.col-xs-push-3.col-xs-3.control-label Confirmation Message
                    .col-xs-push-3.col-xs-6
                      %input.form-control(type="text" data-ng-model="btn.confirmationMessage")
                  .form-group
                    %label.col-xs-push-3.col-xs-3.control-label Title for OK Button
                    .col-xs-push-3.col-xs-6
                      %input.form-control(type="text" data-ng-model="btn.confirmationOk")
                  .form-group
                    %label.col-xs-push-3.col-xs-3.control-label Title for Cancel Button
                    .col-xs-push-3.col-xs-6
                      %input.form-control(type="text" data-ng-model="btn.confirmationCancel")
                .form-group
                  %label.col-xs-3.control-label URL
                  .col-xs-9
                    %input.form-control(type="text" data-ng-model="btn.url")
            .form-group
              %h2.col-xs-12 Grid Buttons
            .panel.panel-default.collapsed(data-ng-repeat="btn in settings.gridButtons")
              .panel-heading
                %a(href="#")
                  {{btn.title || 'Button'}}
                  %span(data-ng-if="btn.help")
                    ({{btn.help}})
              .panel-body
                .form-group
                  %label.col-xs-3.control-label Title
                  .col-xs-9
                    %input.form-control(type="text" data-ng-model="btn.title")
                .form-group
                  %label.col-xs-3.control-label Help
                  .col-xs-9
                    %input.form-control(type="text" data-ng-model="btn.help")
                .form-group
                  %label.col-xs-3.control-label Vertical Position
                  .col-xs-9
                    %select.form-control(data-ng-model="btn.verticalPosition")
                      %option(value="top") Top
                      %option(value="bottom") Bottom
                .form-group
                  %label.col-xs-3.control-label Horizontal Position
                  .col-xs-9
                    %select.form-control(data-ng-model="btn.horizontalPosition")
                      %option(value="left") Left
                      %option(value="center") Center
                      %option(value="right") Right
                .form-group
                  %label.col-xs-3.control-label Style
                  .col-xs-9
                    %select.form-control(data-ng-model="btn.cssClass")
                      %option(value="default") default
                      %option(value="primary") primary
                      %option(value="success") success
                      %option(value="info") info
                      %option(value="warning") warning
                      %option(value="danger") danger
                      %option(value="link") link
                .form-group
                  %label.col-xs-3.control-label Icon
                  .col-xs-9
                    %span.glyphicon(class="{{btn.iconClass}}" data-ng-if="btn.iconClass")
                    %span
                      %a(data-ng-click="toggleIcons()") Change
                    %span |
                    %span
                      %a(data-ng-click="clearIcon(btn)") Clear
                .form-group(data-ng-show="iconsVisible")
                  %ul.bs-glyphicons-list.col-xs-push-3.col-xs-9
                    %li(data-ng-repeat="glyphicon in glyphicons" data-ng-click="selectIcon(btn, glyphicon)")
                      %span.glyphicon(class="{{glyphicon}}")
                      %span.glyphicon-class glyphicon {{glyphicon}}
                .form-group
                  %label.col-xs-3.control-label(for="requires-selection{{$index}}") Requires Selection
                  .col-xs-9
                    %input(id="requires-selection{{$index}}" type="checkbox" data-ng-model="btn.requiresSelection")
                .form-group
                  %label.col-xs-3.control-label(for="show-count{{$index}}") Show Count
                  .col-xs-9
                    %input(id="show-count{{$index}}" type="checkbox" data-ng-model="btn.showCount")
                .form-group
                  %label.col-xs-3.control-label(for="ask-for-confirmation-grid{{$index}}") Ask For Confirmation
                  .col-xs-9
                    %input(id="ask-for-confirmation-grid{{$index}}" type="checkbox" data-ng-model="btn.askForConfirmation")
                %div(data-ng-if="btn.askForConfirmation")
                  .form-group
                    %label.col-xs-push-3.col-xs-3.control-label Confirmation Message
                    .col-xs-push-3.col-xs-6
                      %input.form-control(type="text" data-ng-model="btn.confirmationMessage")
                  .form-group
                    %label.col-xs-push-3.col-xs-3.control-label Title for OK Button
                    .col-xs-push-3.col-xs-6
                      %input.form-control(type="text" data-ng-model="btn.confirmationOk")
                  .form-group
                    %label.col-xs-push-3.col-xs-3.control-label Title for Cancel Button
                    .col-xs-push-3.col-xs-6
                      %input.form-control(type="text" data-ng-model="btn.confirmationCancel")
                .form-group
                  %label.col-xs-3.control-label URL
                  .col-xs-9
                    %input.form-control(type="text" data-ng-model="btn.url")

        .col-md-6.angridArea
          %ul.nav.nav-tabs#angridAreaTabs(role="tablist")
            %li.active
              %a(href="#angridArea") View
            %li
              %a(href="#angridApp") angrid_app.js
            %li
              %a(href="#form") form.html
          .tab-content#angridAreaTabsContent
            %div.tab-pane.fade.active.in#angridArea(data-angrid="" data-settings="settings" data-source="webServiceDataSource" data-template-url="../src/grid.html" data-version="")
            .tab-pane.fade#form
              %pre
                <%= htmlspecialchars(file_get_contents('form.html')); %>
            .tab-pane.fade#angridApp
              %pre.prettyprint
                <%= htmlspecialchars(file_get_contents('angrid_app.js')); %>

    %script(src="../lib/jquery.min.js")
    %script(src="../lib/jquery-ui.min.js")
    %script(src="../lib/angular/angular.js")
    %script(src="../lib/angular/angular-animate.js")
    %script(src="../lib/bootstrap/js/bootstrap.min.js")
    %script(src="../lib/less.min.js")
    %script(src="../src/grid.js")
    %script(src="../src/views/grid/script.js")
    %script(src="../src/views/listing/script.js")
    %script(src="../lib/highlight/highlight.min.js")
    %script(src="angrid_app.js")
    %script(src="demo.js")
